    <classes>
        <!-- ***************** Cost Center ***************** -->
        <class id="CostCenter" _delta="define">
            <parent>cmdbAbstractObject</parent>
            <properties>
                <category>bizmodel,searchable,structure</category>
                <abstract>false</abstract>
                <key_type>autoincrement</key_type>
                <db_table>costcenter</db_table>
                <db_key_field>id</db_key_field>
                <db_final_class_field />
                <naming>
                    <attributes>
                        <attribute id="code" />
                        <attribute id="name" />
                    </attributes>
                </naming>
                <fields_semantic>
                    <state_attribute>status</state_attribute>
                </fields_semantic>
                <icon>images/costcenter.png</icon>
                <style>
                    <icon>images/costcenter.svg</icon>
                </style>
                <reconciliation>
                    <attributes>
                        <attribute id="code" />
                        <attribute id="name" />
                        <attribute id="org_id" />
                        <attribute id="org_name" />
                    </attributes>
                </reconciliation>
                <uniqueness_rules>
                    <rule id="code_org">
                        <attributes>
                            <attribute id="code" />
                            <attribute id="org_id" />
                        </attributes>
                        <is_blocking>true</is_blocking>
                    </rule>
                </uniqueness_rules>
                <obsolescence>
                    <condition>
                        <condition><![CDATA[status = 'inactive']]></condition>
                    </condition>
                </obsolescence>
            </properties>
            <fields>
                <field id="code" xsi:type="AttributeString">
                    <sql>code</sql>
                    <default_value />
                    <is_null_allowed>false</is_null_allowed>
                </field>
                <field id="name" xsi:type="AttributeString">
                    <sql>name</sql>
                    <default_value />
                    <is_null_allowed>false</is_null_allowed>
                </field>
                <field id="org_id" xsi:type="AttributeExternalKey">
                    <sql>org_id</sql>
                    <target_class>Organization</target_class>
                    <is_null_allowed>false</is_null_allowed>
                    <on_target_delete>DEL_MANUAL</on_target_delete>
                </field>
                <field id="org_name" xsi:type="AttributeExternalField">
                    <extkey_attcode>org_id</extkey_attcode>
                    <target_attcode>name</target_attcode>
                </field>
                <field id="status" xsi:type="AttributeEnum">
                    <values>
                        <value id="active">active</value>
                        <value id="inactive">inactive</value>
                    </values>
                    <sql>status</sql>
                    <default_value>active</default_value>
                    <is_null_allowed>false</is_null_allowed>
                    <display_style>list</display_style>
                </field>
                <field id="parent_id" xsi:type="AttributeHierarchicalKey">
                    <sql>parent_id</sql>
                    <is_null_allowed>true</is_null_allowed>
                    <on_target_delete>DEL_MANUAL</on_target_delete>
                </field>
                <field id="parent_name" xsi:type="AttributeExternalField">
                    <extkey_attcode>parent_id</extkey_attcode>
                    <target_attcode>name</target_attcode>
                </field>
                <field id="costcenters_list" xsi:type="AttributeLinkedSet">
                    <linked_class>CostCenter</linked_class>
                    <ext_key_to_me>parent_id</ext_key_to_me>
                </field>
                <field id="functionalcis_list" xsi:type="AttributeLinkedSet">
                    <linked_class>FunctionalCI</linked_class>
                    <ext_key_to_me>costcenter_id</ext_key_to_me>
                    <edit_mode>add_only</edit_mode>
                    <count_min>0</count_min>
                    <count_max>0</count_max>
                    <duplicates />
                </field>
            </fields>
            <presentation>
                <details>
                    <items>
                        <item id="code">
                            <rank>10</rank>
                        </item>
                        <item id="name">
                            <rank>20</rank>
                        </item>
                        <item id="status">
                            <rank>30</rank>
                        </item>
                        <item id="org_id">
                            <rank>30</rank>
                        </item>
                        <item id="parent_id">
                            <rank>40</rank>
                        </item>
                        <item id="costcenters_list">
                            <rank>100</rank>
                        </item>
                        <item id="functionalcis_list">
                            <rank>110</rank>
                        </item>
                    </items>
                </details>
                <default_search>
                    <items>
                        <item id="code">
                            <rank>10</rank>
                        </item>
                        <item id="name">
                            <rank>20</rank>
                        </item>
                        <item id="org_id">
                            <rank>30</rank>
                        </item>
                    </items>
                </default_search>
                <search>
                    <items>
                        <item id="code">
                            <rank>10</rank>
                        </item>
                        <item id="name">
                            <rank>20</rank>
                        </item>
                        <item id="status">
                            <rank>30</rank>
                        </item>
                        <item id="org_id">
                            <rank>30</rank>
                        </item>
                        <item id="parent_id">
                            <rank>40</rank>
                        </item>
                    </items>
                </search>
                <list>
                    <items>
                        <item id="code">
                            <rank>10</rank>
                        </item>
                        <item id="name">
                            <rank>20</rank>
                        </item>
                        <item id="status">
                            <rank>30</rank>
                        </item>
                        <item id="org_id">
                            <rank>30</rank>
                        </item>
                        <item id="parent_id">
                            <rank>40</rank>
                        </item>
                    </items>
                </list>
            </presentation>
            <methods />
        </class>
        <!-- ***************** Extend other classes ***************** -->
        <class id="FunctionalCI" _delta="must_exist">
            <fields>
                <field id="costcenter_id" xsi:type="AttributeExternalKey" _delta="define">
                    <sql>costcenter_id</sql>
                    <default_value />
                    <target_class>CostCenter</target_class>
                    <is_null_allowed>true</is_null_allowed>
                    <on_target_delete>DEL_MANUAL</on_target_delete>
                    <allow_target_creation>false</allow_target_creation>
                    <dependencies>
                        <attribute id="org_id" />
                    </dependencies>
                    <filter><![CDATA[SELECT cc FROM CostCenter AS cc JOIN Organization AS root ON cc.org_id=root.id JOIN Organization AS child ON child.parent_id BELOW root.id WHERE child.id= :this->org_id]]></filter>
                </field>
                <field id="costcenter_name" xsi:type="AttributeExternalField" _delta="define">
                    <extkey_attcode>costcenter_id</extkey_attcode>
                    <target_attcode>name</target_attcode>
                </field>
            </fields>
        </class>
